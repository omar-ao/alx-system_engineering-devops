#!/usr/bin/env bash
# This script configures a new ubuntu machine

# Add custom http response header
sed -iE  "s/^server {/&\n\tadd_header X-Served-By '$(hostname)';/" /etc/nginx/sites-available/default
sed -iE  "s/^[^#]location \/ {/&\n\t\tadd_header X-Served-By '$(hostname)';/" /etc/nginx/sites-available/default

# Restart nginx
service nginx reload
